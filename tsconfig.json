{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["tests/pages/*"],
      "@utils/*": ["tests/utils/*"],
      "@data/*": ["tests/data/*"],
      "@fixtures/*": ["tests/fixtures/*"]
    }
  },
  "include": ["tests", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
